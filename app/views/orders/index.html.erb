<%- model_class = Order -%>
  <h3>Pedidos</h3>
<table class="table table-striped" style="background: gainsboro; line-height: 28px;">
  <thead>
    <tr>
      <th><%= "Id :" %></th>
      <th><%= "Cliente :" %></th>
      <th><%= "Descuento :" %></th>
      <th><%= "Fecha de Venta :" %></th>
      <th><%= "Total :" %></th>
      <th><%= "Fecha Apertura :" %></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= order.client.name %></td>
        <td><%= order.discount %></td>
        <td><%= order.close_at %></td>
        <td><%= order.total %></td>
        <td><%=l order.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t("Abrir Pedido nuevo"),
            clients_path,
            :data => { :confirm => "Desea abrir un pedido? Primero seleccione el cliente."},
            :class => 'btn btn-primary' %>