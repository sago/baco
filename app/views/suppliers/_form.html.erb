<%= form_for @supplier, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label 'Proveedor:', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Domicilio:', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'TelÃ©fono:', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'RFC:', :class => 'control-label' %>
    <div class="controls" style="width: 10px">
      <%= f.text_field :rfc, :class => 'text_field', :size => '20' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'C P :', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :zip_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Web:', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :website, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions" style="background: 0">
    <%= f.submit 'Agregar Proveedor', :class => 'btn btn-primary' %>
